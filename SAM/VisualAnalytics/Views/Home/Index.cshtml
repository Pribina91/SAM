    function getDateFromString(stringDate) {
        if (stringDate) {
            stringDate = stringDate.toString();
            var year = stringDate.substring(0, 4);
            var month = stringDate.substring(4, 6);
            var day = stringDate.substring(6, 8);

            return new Date(year, month - 1, day);

        }
        return null;

    }
