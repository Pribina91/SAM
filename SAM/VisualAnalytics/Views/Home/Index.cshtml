                        var h = obj["weatherDependency"][i]["humidity"];
                        if (h) { str += "Humidity "; }
                        var s = obj["weatherDependency"][i]["solar"];
                        if (s) { str += "Solar "; }
                        var p = obj["weatherDependency"][i]["pressure"];
                        if (p) { str += "Pressure "; }

                        if (!(t && r && ws && h && s && p)) {
                            str += "None ";
                        }

                        pieDataTable.addRow([str, Math.abs(outliernessList[i])]);
                    }
                    break;

